{
  "name": "@kolo/adapter-azure",
  "version": "1.0.0-alpha.1",
  "description": "Azure Blob Storage adapter for Kolo",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "clean": "rm -rf dist",
    "prepublishOnly": "npm run build"
