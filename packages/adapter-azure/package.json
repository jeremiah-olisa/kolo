    "@azure/storage-blob": "^12.0.0"
  },
  "peerDependenciesMeta": {
    "@azure/storage-blob": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^24.9.1",
    "typescript": "^5.9.3"
